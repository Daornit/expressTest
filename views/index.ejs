<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Hello World</title>
  </head>
  <style media="screen">
    p{color: red}
  </style>
  <body>
    <table border="1">
      <tr>
        <td>Post Title</td>
        <td>Description</td>
      </tr>
    <% posts.forEach(function(post){ %>
      <tr>
        <td><a href="<%= post.url %>"><%= post.title %></td>
        <td><%= post.description %></td>
      </tr>
    <% }); %>
    </table>
    <form action="/" method="post">
      <h3>Post title</h3>
      <input type="text" name="title" value="" size="60">
      <h3>Post Url</h3>
      <input type="text" name="url" value="" size="60">
      <h3>Post tags</h3>
      <input type="text" name="tags" value="" size="60">
      <h3>Post description</h3>
      <textarea rows="15" name="description" cols="60" value="hello">

      </textarea><br/>
      <input type="submit" name="" value="Post"><br/>
    </form>
  </body>
</html>
