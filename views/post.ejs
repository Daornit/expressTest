<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= post.title %></title>
  </head>
  <body>
    <h2><%= post.title %></h2>
    <% if(post.date != undefined){ %>
      <p><%= post.date %></p>
    <% } %>
    <p><%= post.description %></p>
    <br/><br/>
    <h3> Comments </h3>
    <form action="<%= post.url %>" method="post">
      <h3>Таний нэр</h3>
      <input type="text" name="userName" value="" size="60">
      <h3>Таний Email</h3>
      <input type="text" name="userEmail" value="" size="60">
      <h3>Таний сэтгэгдэл</h3>
      <textarea rows="4" name="userComment" cols="60" value="hello"></textarea><br/>
      <input type="submit" name="" value="Сэтгэгдэл үлдээх"><br/>
    </form>
    <% post.comment.forEach((comment)=>{ %>
    <p style="border-top: 1px solid black"><%= comment.userName %></p>
    <% if(post.date != undefined){ %>
      <p><%= comment.commentDate %></p>
    <% } %>
    <p><%= comment.userEmail %></p>
    <p><%= comment.userComment %></p>
    <% }); %>
  </body>
</html>
